// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
 id Int @id @default(autoincrement())
 username String @unique
 email String @unique
 password String
 verified Boolean
 profile Profile?
 friends Friends[] @relation("friends")
 tasks Task[]
}

model Friends {
  friend User @relation("friends", fields: [friendId], references: [id])
  friendId Int @id
}

model Profile {
  id     Int    @id @default(autoincrement())
  about String?
  name String?
  lastname String?
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  boards Board[]
}

model Board {
  id Int @id @default(autoincrement())
  title String
  members Member[] @relation("members")
  cards Card[]
  owner Profile @relation(fields: [ownerId], references: [id])
  ownerId Int
}

model Member {
  member Board @relation("members", fields: [memberId], references: [id])
  memberId Int @id
}

model Card {
  id Int @id @default(autoincrement())
  icon String
  Tasks Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  board Board @relation(fields: [boardId], references: [id])
  boardId Int
}

model Task {
  id Int @id @default(autoincrement())
  title String
  description String
  assigned User @relation(fields: [assignedId], references: [id])
  assignedId Int
  status Status @default(PENDING)
  Card Card @relation(fields: [cardId], references: [id])
  cardId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  PENDING
  COMPLETED
  CANCELLED
  SLOW
}